<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:padding="12dp">

            <TextView
                android:id="@+id/home_ViewIdAllenamento"
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:layout_marginEnd="376dp"
                android:text="ID"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.507" />

            <TextView
                android:id="@+id/home_ViewDataAllenamento"
                android:layout_width="116dp"
                android:layout_height="37dp"
                android:text="data"
                android:textColor="@color/black"
                android:textSize="23sp"
                app:layout_constraintStart_toEndOf="@+id/home_ViewIdAllenamento"
                app:layout_constraintTop_toTopOf="parent"
                tools:textAlignment="center" />

            <TextView
                android:id="@+id/home_ViewNomeAllenamento"
                android:layout_width="239dp"
                android:layout_height="37dp"
                android:layout_marginStart="15dp"
                android:text="Nomeallenamento"
                android:textAlignment="center"
                android:textSize="25sp"
                app:layout_constraintStart_toEndOf="@+id/home_ViewDataAllenamento"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/home_ViewEserciziAllenamento"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:text="TextView"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@+id/home_ViewkgripAllenamento"
                app:layout_constraintTop_toBottomOf="@+id/home_ViewDurataAllenamento" />

            <TextView
                android:id="@+id/home_ViewkgripAllenamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="TextView"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_ViewNomeAllenamento" />

            <TextView
                android:id="@+id/home_ViewDurataAllenamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="13dp"
                android:text="TextView"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@+id/home_ViewNomeAllenamento"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>